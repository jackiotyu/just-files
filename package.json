{
  "name": "just-files",
  "displayName": "Just Files",
  "description": "A extension for work with only desires files",
  "version": "0.0.1",
  "publisher": "palaso",
  "repository": {
    "type": "git",
    "url": "https://github.com/palaso0/just-files.git"
},
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "justFilesView",
          "name": "Just Files"
        },
        {
          "id": "foldersView",
          "name": "Folders"
        }
      ]
    },
    "commands": [
      {
        "command": "just-files.show",
        "title": "Show",
        "icon": {
          "light": "resources/light/showEyeLight.svg",
          "dark": "resources/dark/showEyeDark.svg"
        }
      },
      {
        "command": "just-files.hide",
        "title": "Hide",
        "icon": {
          "light": "resources/light/hideEyeLight.svg",
          "dark": "resources/dark/hideEyeDark.svg"
        }
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "just-files.show",
          "group": "inline",
          "when": "view == foldersView"
        },
        {
          "command": "just-files.hide",
          "group": "inline",
          "when": "view == justFilesView"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.79.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}